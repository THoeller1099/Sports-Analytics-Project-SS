<p id="notice"><%= notice %></p>

<h1>Welcome! View NBA stats below</h1>

<div class="table_container">
    <h2><%= link_to 'Players', players_path %></h2>
    <div>
    </div>
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Position</th>
                <th>Team Name</th>
                <th>Points</th>
                <th>Assists</th>
                <th>Rebounds</th>
                <th>Blocks</th>
                <th>Steals</th>
                <th>TwoPtFgAtt</th>
                <th>TwoPtFgMade</th>
                <th>ThreePtFgAtt</th>
                <th>ThreePtFgMade</th>
                <th>FreeThrowAtt</th>
                <th>FreeThrowMade</th>
            </tr>
        </thead>
        
        <tbody>
            <% @players.where(year:"2018-2019").each do |player| %>
                <tr>
                    <td><%= link_to player.first_name, player %></td>
                    <td><%= link_to player.last_name, player %></td>
                    <td><%= player.position %></td>
                    <td><%= player.team_name %></td>
                    <td><%= player.points %></td>
                    <td><%= player.assists %></td>
                    <td><%= player.rebounds %></td>
                    <td><%= player.blocks %></td>
                    <td><%= player.steals %></td>
                    <td><%= player.twoPtFgAtt %></td>
                    <td><%= player.twoPtFgMade %></td>
                    <td><%= player.threePtFgAtt %></td>
                    <td><%= player.threePtFgMade %></td>
                    <td><%= player.freeThrowAtt %></td>
                    <td><%= player.freeThrowMade %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>

<hr class="separator">

<div class="table table-striped table-bordered table-hover">
    <h2>Teams</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Abbr</th>
                <th>Location</th>
                <th colspan="3"></th>
            </tr>
        </thead>
        
        <tbody>
            <% @teams.where(year: "2018-2019").each do |team| %>
              <tr>
                <td><%= link_to team.name, team %></td>
                <td><%= team.abbr %></td>
                <td><%= team.location %></td>
              </tr>
            <% end %>
        </tbody>
    </table>
</div>
