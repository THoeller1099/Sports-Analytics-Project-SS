<p id="notice"><%= notice %></p>

<h1>Welcome! View NBA stats below</h1>

<div class="table_container">
    <h2>Players</h2>
    <div>
        <h5>PPG: Points per Game</h5>
        <h5>APG: Assists per Game</h5> 
        <h5>RPG: Rebounds per game</h5>
    </div>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Team</th>
                <th>PPG</th>
                <th>APG</th>
                <th>RPG</th>
                <th colspan="3"></th>
            </tr>
        </thead>
        
        <tbody>
            <% @players.where(year:"2018-2019").each do |player| %>
                <tr>
                    <% name = player.first_name + " " + player.last_name %>
                    <td><%= link_to name, player %></td>
                    <td><%= player.team_name %></td>
                    <td><%= player.points %></td>
                    <td><%= player.assists %></td>
                    <td><%= player.rebounds %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>

<hr class="separator">

<div class="table_container">
    <h2>Teams</h2>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Abbr</th>
                <th>Location</th>
                <th colspan="3"></th>
            </tr>
        </thead>
        
        <tbody>
            <% @teams.where(year: "2018-2019").each do |team| %>
              <tr>
                <td><%= link_to team.name, team %></td>
                <td><%= team.abbr %></td>
                <td><%= team.location %></td>
              </tr>
            <% end %>
        </tbody>
    </table>
</div>
