<p id="notice"><%= notice %></p>

<h1>Players</h1>

<div class="table_container">
  <script>
    function hide(x) {
      var arrayOfElements=document.getElementsByClassName(x);
      var lengthOfArray=arrayOfElements.length;
      for (var i=0; i<lengthOfArray;i++){
          arrayOfElements[i].style.display='none';
      }
    }
    function show(x) {
      var arrayOfElements=document.getElementsByClassName(x);
      var lengthOfArray=arrayOfElements.length;
      for (var i=0; i<lengthOfArray;i++){
          arrayOfElements[i].style.display='inline';
      }
    }
  </script>
  <button type="button" onclick="hide('pos')">Hide Position</button>
  <button type="button" onclick="show('pos')">Show Position</button>
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Year</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th class="pos">Position</th>
        <th>Team Name</th>
        <th>Points</th>
        <th>Assists</th>
        <th>Rebounds</th>
        <th>Blocks</th>
        <th>Steals</th>
        <th>TwoPtFgAtt</th>
        <th>TwoPtFgMade</th>
        <th>ThreePtFgAtt</th>
        <th>ThreePtFgMade</th>
        <th>FreeThrowAtt</th>
        <th>FreeThrowMade</th>
      </tr>
    </thead>
  
    <tbody>
      <% @players.each do |player| %>
        <tr>
          <td><%= player.year %></td>
          <td><%= link_to player.first_name, player %></td>
          <td><%= link_to player.last_name, player %></td>
          <td class="pos"><%= player.position %></td>
          <td><%= player.team_name %></td>
          <td><%= player.points %></td>
          <td><%= player.assists %></td>
          <td><%= player.rebounds %></td>
          <td><%= player.blocks %></td>
          <td><%= player.steals %></td>
          <td><%= player.twoPtFgAtt %></td>
          <td><%= player.twoPtFgMade%></td>
          <td><%= player.threePtFgAtt %></td>
          <td><%= player.threePtFgMade %></td>
          <td><%= player.freeThrowAtt %></td>
          <td><%= player.freeThrowMade %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

