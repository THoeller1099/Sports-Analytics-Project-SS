<p id="notice"><%= notice %></p>

<h1>Games</h1>
<div class="table_container">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Date</th>
        <th>Time</th>
        <th>Home</th>
        <th>Away</th>
        <th>Home Score</th>
        <th>Away Score</th>
      </tr>
    </thead>
  
    <tbody>
      <% @games.each do |game| %>
        <tr>
          <td><%= game.date %></td>
          <td><%= game.time %></td>
          <td><%= game.home %></td>
          <td><%= game.away %></td>
          <td><%= game.home_score %></td>
          <td><%= game.away_score %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<%= link_to 'New Game', new_game_path %>
